{{>header}}
{{>navbar}}
<section class="container my-4">
    <div class="row">
        {{#unless ifFound}}
        <div class="alert alert-danger">user not found</div>
        {{else}}
        <form method="post">
        <div class="col-6 mb-3">
            <input class="form-control" placeholder="name" name="name" value="{{user.name}}">
        </div>
        <div class="col-6 mb-3">
            <input class="form-control" placeholder="age" name="age" value="{{user.age}}">
        </div>
        <div class="col-6 mb-3">
            <input class="form-control" placeholder="password" name="password"  value="{{user.password}}">
        </div>
        <div class="col-6 mb-3">
            <input class="form-control" placeholder="email" name="email"  value="{{user.email}}">
        </div>
        <div class="col-12">
            <button class="btn btn-primary">Edit User</button>
        </div>
        </form>
        {{/unless}}
    </div>
</section>
{{>footer}}