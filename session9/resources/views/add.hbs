{{>header}}
{{>navbar}}
<section class="container my-4">
    <div class="row">
        <form method="post">
            <div class="col-6 mb-3">
                <input class="form-control" placeholder="name" name="name" value="{{userData.name}}">
                {{#if errors.name}}
                    <div class="text-danger">{{errors.name}}</div>
                {{/if}}
            </div>
            <div class="col-6 mb-3">
                {{!-- <span>{{msg}}</span> --}}
                <input class="form-control" placeholder="age" name="age" type="number" value="{{userData.age}}">
                {{#if errors.age}}
                    <div class="text-danger">{{errors.age}}</div>
                {{/if}}

            </div>
            <div class="col-6 mb-3">
                <input class="form-control" placeholder="password" name="password" value="{{userData.password}}">
                                {{#if errors.password}}
                    <div class="text-danger">{{errors.password}}</div>
                {{/if}}

            </div>
            <div class="col-6 mb-3">
                <input class="form-control" placeholder="email" name="email" value="{{userData.email}}">
                {{#if errors.email}}
                    <div class="text-danger">{{errors.email}}</div>
                {{/if}}
            </div>
            <div class="form-check">
                <p>Gender:</p>
                  <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="male" {{#if userData.gender}}checked{{/if}}>
                <label class="form-check-label" for="flexRadioDefault1">Male</label>
            </div>
            <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault2" value="female" {{#unless userData.gender}}checked{{/unless}}>
            <label class="form-check-label" for="flexRadioDefault2">female</label>
            </div>
        {{#if errors.gender}}
                    <div class="text-danger">{{errors.gender}}</div>
                {{/if}}

            <div class="col-12">
                <button class="btn btn-primary" type="submit">Add User</button>
            </div>
        </form>
    </div>
</section>
{{>footer}}